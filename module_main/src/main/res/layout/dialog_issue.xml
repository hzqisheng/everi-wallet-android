<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000">

        <ImageView
            android:id="@+id/iv_issue_fts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_issue_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/issue_fts"
            android:textColor="@color/color_33"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/iv_issue_fts"
            app:layout_constraintStart_toStartOf="@+id/iv_issue_fts"
            app:layout_constraintTop_toTopOf="@+id/iv_issue_fts" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:maxLength="55"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="@string/issue_fts_msg"
            app:layout_constraintBottom_toBottomOf="@+id/iv_issue_fts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <ImageView
            android:id="@+id/iv_issue_nfts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_issue_bg"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_issue_fts" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/issue_nfts"
            android:textColor="@color/color_33"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/textView7"
            app:layout_constraintEnd_toEndOf="@+id/iv_issue_nfts"
            app:layout_constraintStart_toStartOf="@+id/iv_issue_nfts"
            app:layout_constraintTop_toTopOf="@+id/iv_issue_nfts" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:maxLength="55"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="@string/issue_nfts_msg"
            app:layout_constraintBottom_toBottomOf="@+id/iv_issue_nfts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>