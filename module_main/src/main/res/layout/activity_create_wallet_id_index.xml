<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.index.CreateWalletIdIndex">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_my_bg"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_wode_logo"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/tv_create_id"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/shape_3137_4"
            android:gravity="center"
            android:text="@string/create_id"
            android:textColor="@color/color_e4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout3" />

        <TextView
            android:id="@+id/tv_recovery_id"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_line_3_68"
            android:gravity="center"
            android:text="@string/recover_id"
            android:textColor="@color/color_3137"
            />

    </LinearLayout>


</RelativeLayout>