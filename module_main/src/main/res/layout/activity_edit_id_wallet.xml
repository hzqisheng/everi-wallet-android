<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5"
    tools:context=".ui.activity.index.EditIdWalletActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/normal_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/shadow_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/tv_change_pwd"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/my_item_selector"
            android:drawableEnd="@drawable/ic_my_more"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:text="@string/change_pwd"
            android:textColor="@color/color_33"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/tv_change_pwd"
            android:background="@color/color_d8" />

        <TextView
            android:layout_below="@+id/view_line2"
            android:id="@+id/tv_retrieve_pwd"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/my_item_selector"
            android:drawableEnd="@drawable/ic_my_more"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:text="@string/retrieve_pwd"
            android:textColor="@color/color_33"
            android:textSize="15sp" />
        <View
            android:id="@+id/view_line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/tv_retrieve_pwd"
            android:background="@color/color_d8" />

        <TextView
            android:layout_below="@+id/view_line3"
            android:id="@+id/tv_export"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/my_item_selector"
            android:drawableEnd="@drawable/ic_my_more"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:text="@string/export_mnemonic_code"
            android:textColor="@color/color_33"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/shadow_line_e6_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout2">

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/my_item_selector"
            android:drawableEnd="@drawable/ic_my_more"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:text="@string/add_id_wallet"
            android:textColor="@color/color_33"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>