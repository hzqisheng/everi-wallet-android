<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.index.AddMetaActivity">

    <include android:id="@+id/title" layout="@layout/normal_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:background="@color/white"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Key"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            />
        <EditText
            android:id="@+id/edKey"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="@string/please_input"
            android:paddingLeft="15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#66000000"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Value"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="15dp"
            />
        <EditText
            android:id="@+id/edValue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="@string/please_input"
            android:paddingLeft="15dp"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/tvSave"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/shape_3137_4"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/color_e4"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>